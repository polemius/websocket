{
  "name": "@storeon/websocket",
  "version": "0.1.0",
  "description": "Module for storeon which allows sending and reciving events by WebSocket",
  "repository": "storeon/websocket",
  "author": "Ivan Menshykov <ivan.menshykov@gmail.com>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint *.js test/*.js test/demo/*.js",
    "size": "size-limit",
    "jest": "NODE_ENV=development jest --coverage",
    "spell": "yarn docs && yaspeller *.md",
    "docs": "documentation build *.js -f md -o api.md",
    "test": "yarn jest --watch && yarn lint && size-limit && yarn spell",
    "start": "concurrently \"parcel serve --cache-dir test/demo/.cache -d test/demo/dist test/demo/index.html --open\" \"node test/demo/ws_server.js\""
  },
  "devDependencies": {
    "@logux/eslint-config": "^35.0.1",
    "@size-limit/preset-small-lib": "^2.2.3",
    "chalk": "^3.0.0",
    "clean-publish": "^1.1.4",
    "concurrently": "^5.0.2",
    "documentation": "^12.1.4",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-es5": "^1.4.1",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-import-helpers": "^1.0.2",
    "eslint-plugin-jest": "^23.1.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^14.0.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "jest-websocket-mock": "^2.0.0",
    "lint-staged": "^9.5.0",
    "mock-socket": "^9.0.2",
    "nanoid": "^2.1.8",
    "parcel-bundler": "^1.12.4",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "storeon": "^0.9.7",
    "ws": "^7.2.1",
    "yaspeller": "^6.0.2"
  },
  "size-limit": [
    {
      "path": "index.js",
      "limit": "275 B"
    }
  ],
  "eslintConfig": {
    "extends": "@logux/eslint-config/browser",
    "rules": {
      "es5/no-es6-static-methods": "off",
      "consistent-return": "off",
      "func-style": "off"
    }
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn jest",
      "yarn lint",
      "size-limit"
    ],
    "*.md": "yaspeller"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "dictionary": [
      "storeon",
      "eslint"
    ]
  }
}
